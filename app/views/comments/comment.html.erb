<div class="comment clearfix">
    <div class="comment_content">
        <p class="comment_name"><strong><%= comment.name %></strong></p>
        <p class="comment_body"><em><%= comment.body %></em></p>
        <p class="comment_title"><em><%= time_ago_in_words(comment.created_at) %></em></p>
    </div>
 <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button", data: { confirm: 'Are your sure?'} %></p>
    <% end %>
    
</div>