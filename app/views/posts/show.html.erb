<div id="post-wrapper">
<h1> Show Post</h1>

<p class="title">
<%= @post.title %>
</p>

<p class= "date">
Submitted <%= time_ago_in_words(@post.created_at) %> ago
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %>
</p>

<p>
<%= @post.body %>
</p>

<%= link_to "All Posts", root_path %>
</div>